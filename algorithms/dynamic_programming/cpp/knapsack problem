#include <bits/stdc++.h>
using namespace std ;

int main(){
  int t;
	cin>>t;
	while(t--)
	{
	    int n,w,i,j;
	    cin>>n>>w;
	    vector<int> val(n);
	    vector<int> wt(n);
	    for(i=0;i<n;i++)
	        cin>>val[i];
	    for(i=0;i<n;i++)
	        cin>>wt[i];
	    vector<vector<int>> dp(n+1,vector<int> (w+1,0));
	    for(i=1;i<=n;i++)
	    {
	        for(j=1;j<=w;j++)
	        {
	            if((j-wt[i-1])>=0)
	            {
	                dp[i][j]=max(dp[i-1][j],val[i-1]+dp[i-1][j-wt[i-1]]);
	            }
	            else
	            {
	                dp[i][j]=dp[i-1][j];
	            }
	        }
	    }
	    cout<<dp[n][w]<<endl;
	}
	return 0;
}
